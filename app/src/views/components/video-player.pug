.video-player.component
    figure#videoContainer(data-fullscreen="false")
        video#video(controls preload="metadata" poster="/content/images/poster.jpg")
            source(src="http://iandevlin.github.io/mdn/video-player/video/tears-of-steel-battle-clip-medium.mp4" type="video/mp4")
            source(src="http://iandevlin.github.io/mdn/video-player/video/tears-of-steel-battle-clip-medium.webm" type="video/webm")
            source(src="http://iandevlin.github.io/mdn/video-player/video/tears-of-steel-battle-clip-medium.ogg" type="video/ogg")
        #videoPlayButton
            i.fas.fa-play
        ul#video-controls.controls
            li
                button#playpause(type="button") 
                    i.fas.fa-play
            li
                button#stop(type="button" disabled)
                    i.fas.fa-stop
            li.progress
                progress#progress(value="0" min="0")
                    span#progress-bar
            li
                button#mute(type="button")
                    i.fas.fa-volume-mute
            //- li
            //-     button#volinc(type="button") Vol+
            //- li
            //-     button#voldec(type="button") Vol-
            li
                button#fs(type="button")
                    i.fas.fa-arrows-alt
        figcaption
