nav.navbar.navbar-default.navbar-fixed-top
    .container-fluid
        .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='#' title="Site Logo") 
                img(src='/content/images/logo.png')
            //- .search-btn-mobile.visible-xs-inline-block.visible-sm-inline-block
            //-     button.btn.btn-default(type="button")
            //-         i.fas.fa-search
        #navbar.navbar-collapse.collapse
            ul.nav.navbar-nav
                each item in NAV.items
                    if item.subitems
                        li.dropdown
                            a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false' title= item.title)
                                = item.title 
                                span.caret
                            ul.dropdown-menu(role='menu')
                                each subitem in item.subitems
                                    li
                                        a(href='/content/html/views/pages/about.html' title= subitem.title)
                                            = subitem.title 
                    else
                        li
                            a(href=item.path title=item.title)= item.title
        .input-group.search-bar
            input(type="text" class="form-control search-input" placeholder="Search for...")
            span.input-group-btn
                button.btn.btn-default(type="button")
                    i.fas.fa-search
